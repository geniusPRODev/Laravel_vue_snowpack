{
    "scripts": {
        "snowpack:watch": "snowpack build --watch",
        "tw:dev": "TAILWIND_MODE=watch NODE_ENV=development postcss ./resources/css/app.css -o ./public/dist/css/app.css -w",
        "snowpack:build": "snowpack build",
        "tw:prod": "NODE_ENV=production npx tailwindcss-cli@latest build ./resources/css/app.css -o ./public/dist/app.css",
        "dev": "run-p snowpack:watch tw:dev",
        "prod": "run-p snowpack:build tw:prod"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5",
        "snowpack": "^3.5.2"
    },
    "dependencies": {
        "@inertiajs/inertia": "^0.9.0",
        "@inertiajs/inertia-vue3": "^0.4.0",
        "@inertiajs/progress": "^0.2.5",
        "@snowpack/plugin-dotenv": "^2.1.0",
        "@snowpack/plugin-postcss": "^1.4.0",
        "@snowpack/plugin-vue": "^2.6.0",
        "autoprefixer": "^10.2.6",
        "postcss": "^8.3.0",
        "postcss-cli": "^8.3.1",
        "tailwindcss": "^2.1.2",
        "vue": "^3.0.11"
    }
}
